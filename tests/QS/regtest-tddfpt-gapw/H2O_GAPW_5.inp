&GLOBAL
  PRINT_LEVEL LOW
  PROJECT H2O_GAPW
  RUN_TYPE ENERGY
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME EMSL_BASIS_SETS
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      NGRIDS 4
      REL_CUTOFF 40
    &END MGRID
    &POISSON
      PERIODIC NONE
      POISSON_SOLVER MT
    &END POISSON
    &QS
      METHOD GAPW
    &END QS
    &SCF
      MAX_SCF 40
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &TDDFPT
      CONVERGENCE 1.0e-5
      MAX_ITER 10
      MAX_KV 10
      NSTATES 3
      &MGRID
        CUTOFF 250
        NGRIDS 5
        REL_CUTOFF 50
      &END MGRID
      &XC
        &XC_FUNCTIONAL PBE
        &END XC_FUNCTIONAL
      &END XC
    &END TDDFPT
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC 6.0 6.0 6.0
      PERIODIC NONE
    &END CELL
    &COORD
      O   0.000000    0.000000   -0.065587 H2O
      H   0.000000   -0.757136    0.520545 H2O
      H   0.000000    0.757136    0.520545 H2O
    &END COORD
    &KIND H
      BASIS_SET ORB 6-311Gxx
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET ORB 6-311Gxx
      POTENTIAL ALL
    &END KIND
    &TOPOLOGY
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
